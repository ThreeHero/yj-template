{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": false, // 允许在JS文件中报错，通常与allowJS一起使用
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "pages/*": ["src/pages/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  }
}
